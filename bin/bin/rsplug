#!/usr/bin/env bash


### Git your Vim plugins
########################

read -p "Adding/upgrading Vim plugins (enter to continue)"
[[ -d ~/.vim/pack/plugins/start ]] || mkdir -p ~/.vim/pack/plugins/start

if [[ -d ~/.vim/pack/plugins/start/vim-fugitive ]]; then
    git clone https://github.com/tpope/vim-fugitive ~/.vim/pack/plugins/start
else
    cd ~/.vim/pack/plugins/start/vim-fugitive
    git pull
    cd -
fi

if [[ -d ~/.vim/pack/plugins/start/vim-commentary ]]; then
    git clone https://github.com/tpope/vim-commentary ~/.vim/pack/plugins/start
else
    cd ~/.vim/pack/plugins/start/vim-commentary
    git pull
    cd -
fi

if [[ -d ~/.vim/pack/plugins/start/vim-surround ]]; then
    git clone https://github.com/tpope/vim-surround ~/.vim/pack/plugins/start
else
    cd ~/.vim/pack/plugins/start/vim-surround
    git pull
    cd -
fi

if [[ -d ~/.vim/pack/plugins/start/vim-repeat ]]; then
    git clone https://github.com/tpope/vim-repeat ~/.vim/pack/plugins/start
else
    cd ~/.vim/pack/plugins/start/vim-repeat
    git pull
    cd -
fi

if [[ -d ~/.vim/pack/plugins/start/context.vim ]]; then
    git clone https://github.com/wellle/context.vim ~/.vim/pack/plugins/start
else
    cd ~/.vim/pack/plugins/start/context.vim
    git pull
    cd -
fi

if [[ -d ~/.vim/pack/plugins/start/auto-pairs ]]; then
    git clone https://github.com/jiangmiao/auto-pairs ~/.vim/pack/plugins/start
else
    cd ~/.vim/pack/plugins/start/auto-pairs
    git pull
    cd -
fi

if [[ -d ~/.vim/pack/plugins/start/ale ]]; then
    git clone https://github.com/dense-analysis/ale ~/.vim/pack/plugins/start
else
    cd ~/.vim/pack/plugins/start/ale
    git pull
    cd -
fi
