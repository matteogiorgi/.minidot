#!/usr/bin/env bash

# Check the relative mime-type here (inode/directory not necessary):
# https://www.iana.org/assignments/media-types/media-types.xhtml


FILE="$*"
case $(file --mime-type "${FILE}" -bL) in
    text/* | application/json)
        "${EDITOR:=vi}" "$@"
        ;;
    *)
        "xdg-open '${FILE}'"
esac
